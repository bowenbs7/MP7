<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:background="#D8F7Fe" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/gamecontroller"
            android:contentDescription="@string/app_name"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/app_introduction"
            android:textSize="25sp"
            android:textColor="#2a2a2a"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="@string/game_title"
            android:textColor="#2a2a2a"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#2a2a2a"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="Available:"
            android:textColor="#2a2a2a"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/offer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#2a2a2a"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/marketPrice"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="Market Price:"
            android:textColor="#2a2a2a"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/offeredPrice"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#2a2a2a"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="Retail Price:"
            android:textColor="#2a2a2a"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/retailedPrice"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#2a2a2a"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="Sell Price:"
            android:textColor="#2a2a2a"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sellPrice"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#2a2a2a"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="Search again! Click the button to see prices!"
        android:textColor="#2a2a2a"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/product_name"
        android:inputType="textPersonName"
        android:textColor="#2a2a2a" />

    <Button
        android:id="@+id/seeResults"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/return_button"
        android:textColor="#ffffff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="visible" />

    <Button
        android:id="@+id/mainPage"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/main"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:text="@string/citations"
        android:textColor="#2a2a2a"
        android:textSize="10sp"
        />

</LinearLayout>